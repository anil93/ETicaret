@using E_Ticaret.Models.Entities
@model Category

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <h1 class="page-header">Kategori Düzenleme</h1>
    <div class="col-md-6 col-sm-8 col-lg-4">
        @if (ViewBag.ResultMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ResultMessage
            </div>
        }
       
        <form action="@Url.Action("Create", "Category")" method="post" enctype="multipart/form-data">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Kategori Adı")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, "Açıklaması")
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div> 
            <div class="form-group">
                @Html.LabelFor(m => m.categoryImagePath, "Resim")
                <input type="file" name="ImageFile"/>               
            </div>          
            <div class="form-group">
                @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

